@model IEnumerable<VyshnaviPortfolio.Models.Skill>

<div class="skills-section">
    <h2>Skills</h2>
    <ul>
        @foreach (var skill in Model)
        {
            <li>@skill.Name</li>
        }
        A
    </ul>
</div>

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    .skills-section {
        background: url('/Images/skills.jpg') no-repeat center center;
        background-size: cover; /* Ensures the image covers the section */
        color: #fff;
        padding: 40px;
        border-radius: 12px;
        width: 70%;
        margin: 50px auto;
        box-shadow: 0 8px 20px rgba(0,0,0,0.3);
        text-align: center;
        position: relative;
    }

        /* Optional: add a semi-transparent overlay for readability */
        .skills-section::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.5); /* Dark overlay */
            border-radius: 12px;
            z-index: 0;
        }

        .skills-section h2,
        .skills-section ul {
            position: relative;
            z-index: 1; /* Ensures text is above overlay */
        }

        .skills-section h2 {
            font-size: 2rem;
            margin-bottom: 20px;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .skills-section ul {
            list-style: none;
            padding: 0;
        }

        .skills-section li {
            background-color: rgba(255, 255, 255, 0.2);
            margin: 10px 0;
            padding: 12px;
            border-radius: 8px;
            font-size: 1.1rem;
            transition: transform 0.2s ease, background-color 0.3s ease;
        }

            .skills-section li:hover {
                transform: scale(1.05);
                background-color: rgba(255, 255, 255, 0.4);
            }
</style>