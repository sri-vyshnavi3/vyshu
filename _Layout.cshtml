<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - Vanka Sri Vyshnavi Portfolio</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <style>
            body {
                margin: 0;
                padding: 0;
            }
            /* Add padding so content doesn't hide behind fixed navbar */
            .content-container {
                padding-top: 70px; /* Adjust based on navbar height */
            }
    </style>
</head>
<body>
    <!-- Navbar fixed at the top -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Vanka Sri Vyshnavi</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- ms-auto pushes items to the right; remove if you want them left-aligned -->
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/Portfolio/About">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Portfolio/Education">Education</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Portfolio/Internships">Internships</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Portfolio/Projects">Projects</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Portfolio/Skills">Skills</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Portfolio/Contact">Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <div class="container content-container">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
